<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserRegistrationActivity">
    <ImageView
        android:id="@+id/ivUserUpdateProfileMainLogo"
        android:layout_width="150sp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ambutrackerregistrationlogo"
        android:layout_margin="16sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvUserEditProfile"
        app:cardBackgroundColor="@color/faintred"
        app:cardElevation="16sp"
        app:cardCornerRadius="16sp"
        android:layout_margin="16sp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUserEditProfileMainTitle"
                    android:text="Edit Your Profile"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:fontFamily="@font/diplomata"
                    android:gravity="center_horizontal"
                    android:layout_margin="10sp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/etUserEditProfileName"
                    android:hint="Name"
                    android:textColorHint="@color/black"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingLeft="8sp"
                    android:background="@drawable/edittextbackground"
                    android:layout_margin="8sp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/person_icon"
                    android:drawablePadding="5sp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/etUserEditProfileMobileNo"
                    android:hint="Mobile No."
                    android:textColorHint="@color/black"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingLeft="8sp"
                    android:background="@drawable/edittextbackground"
                    android:layout_margin="8sp"
                    android:inputType="number"
                    android:drawableLeft="@drawable/icon_phone"
                    android:drawablePadding="5sp"
                    android:enabled="false"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/etUserEditProfileEmailId"
                    android:hint="Email Id"
                    android:textColorHint="@color/black"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingLeft="8sp"
                    android:background="@drawable/edittextbackground"
                    android:layout_margin="8sp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/icon_email"
                    android:drawablePadding="5sp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/etUserEditPofileUserName"
                    android:hint="UserName"
                    android:textColorHint="@color/black"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingLeft="8sp"
                    android:background="@drawable/edittextbackground"
                    android:layout_margin="8sp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/icon_username"
                    android:drawablePadding="5sp"
                    android:enabled="false"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/btnUserUpdateProfile"
                    android:text="Update Profile"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/btnbackground"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8sp"
                    />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>
