<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationActivity"
    android:orientation="vertical"
    android:gravity="center"

    >
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/otp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/diplomata"
        android:text="OTP Verification"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the OTP sent to"
        android:textColor="@color/black"
        android:fontFamily="@font/diplomata"
        android:textStyle="normal"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOTPVerificationMobileNo"
        android:text="+91 9325602689"
        android:textColor="@color/black"
        android:fontFamily="@font/diplomata"
        android:textStyle="normal"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >

        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etOTPVerification1"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:layout_marginLeft="8dp"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etOTPVerification2"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="normal"
            android:fontFamily="@font/diplomata"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:layout_marginLeft="8dp"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etOTPVerification3"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:fontFamily="@font/diplomata"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:layout_marginLeft="8dp"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etOTPVerification4"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:fontFamily="@font/diplomata"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:layout_marginLeft="8dp"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etOTPVerification5"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:fontFamily="@font/diplomata"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:layout_marginLeft="8dp"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etOTPVerification6"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:fontFamily="@font/diplomata"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive the OTP"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16dp"
            android:fontFamily="@font/diplomata"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:id="@+id/tvOTPVerificationResentOTP"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/diplomata"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btnOTPVerificationVerify"
        android:text="Verify"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/btnbackground"
        android:layout_marginTop="25dp">

    </androidx.appcompat.widget.AppCompatButton>
</LinearLayout>