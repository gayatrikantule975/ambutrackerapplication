<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHomActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/homeFrameLayout"
        android:layout_above="@+id/homeBottonNaviagtionView"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homeBottonNaviagtionView"
        app:menu="@menu/home_bottom_naviagtion_menu"
       android:layout_alignParentBottom="true"
        android:background="@drawable/bottomnavigationbackground"
        app:itemIconTint="@drawable/bottomnavigationcolor"
        app:itemTextColor="@drawable/bottomnavigationcolor"
        app:itemRippleColor="@color/red"
        />

</RelativeLayout>