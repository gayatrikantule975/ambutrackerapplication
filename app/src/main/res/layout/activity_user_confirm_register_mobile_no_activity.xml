<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserConfirmRegisterMobileNoActivityActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/ivUserMobilenoConfirmationimg"
        android:src="@drawable/confirmed"
        android:layout_centerInParent="true"
        android:layout_margin="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/etUserMobilenoverifyMobileNo"
        android:hint="Enter Registered Mobile No."
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingLeft="8sp"
        android:background="@drawable/edittextbackground"
        android:layout_margin="8sp"
        android:inputType="number"
        android:drawableLeft="@drawable/icon_phone"
        android:drawablePadding="5sp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnmobilenoVerificationVerify"
        android:text="Verify"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/btnbackground"
        android:layout_marginTop="25dp"
        android:layout_margin="30sp"/>
</LinearLayout>