<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserCategoryWiseHospitalActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayoutbg">
    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svSearchHospitalByCategory"
        android:queryHint="Search By Category,Hospital,Contact No"
        android:iconifiedByDefault="false"
        android:layout_margin="16sp"
        android:background="@drawable/svbackground"

        />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvCategoryWisHospitalHospitalList"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCategoryWiseHospitalNoCategoryAvailable"
        android:text="No Category Available"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
</LinearLayout>